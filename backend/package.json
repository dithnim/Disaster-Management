{
  "name": "disaster-management-backend",
  "version": "1.0.0",
  "description": "Backend server for disaster management and rescue coordination",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:js": "nodemon server.js",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.940.0",
    "@aws-sdk/client-dynamodb": "^3.940.0",
